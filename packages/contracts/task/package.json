{
  "name": "@graphprotocol/contracts-task",
  "version": "1.0.3",
  "private": true,
  "description": "Task utilities for @graphprotocol/contracts",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "default": "./src/index.ts",
      "types": "./src/index.ts"
    }
  },
  "dependencies": {
    "@graphprotocol/contracts": "workspace:^",
