  "license": "GPL-2.0-or-later",
  "scripts": {
    "lint:ts": "eslint '**/*.{js,ts}' --fix",
    "lint:sol": "prettier --write contracts/**/*.sol && solhint --noPrompt --fix contracts/**/*.sol --config node_modules/solhint-graph-config/index.js",
