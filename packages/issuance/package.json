{
  "name": "@graphprotocol/issuance",
  "version": "0.1.0",
  "description": "The Graph Issuance Contracts",
  "main": "index.js",
  "scripts": {
    "prepare": "cd ../.. && husky install packages/contracts/.husky",
    "prepublishOnly": "scripts/prepublish",
    "build": "SKIP_LOAD=true scripts/build",
    "clean": "rm -rf build/ cache/ dist/ forge-artifacts/ cache_forge/",
    "compile": "hardhat compile",
    "test": "scripts/test",
    "test:production": "scripts/test-production",
    "test:gas": "RUN_EVM=true REPORT_GAS=true scripts/test",
    "test:coverage": "scripts/coverage",
    "lint": "yarn lint:sol",
    "lint:ts": "eslint '**/*.{js,ts}' --fix",
    "lint:sol": "solhint --fix contracts/**/*.sol",
    "prettier": "yarn prettier:ts && yarn prettier:sol",
    "prettier:ts": "prettier --write 'test/**/*.ts'",
    "prettier:sol": "prettier --write 'contracts/**/*.sol' --plugin=prettier-plugin-solidity",
    "security": "scripts/security",
    "flatten": "scripts/flatten",
    "typechain": "hardhat typechain",
    "verify": "hardhat verify",
    "size": "hardhat size-contracts",
    "deploy": "hardhat run scripts/deploy.ts",
    "forge:build": "forge build",
    "forge:test": "forge test",
    "forge:test:fork": "forge test --match-path 'test/forge/fork/**/*.sol' -vvv",
    "forge:test:fork:arbitrum": "forge test --match-path 'test/forge/fork/**/*.sol' --fork-url ${ARBITRUM_RPC_URL} -vvv",
    "forge:coverage": "forge coverage"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "lint-staged": {
    "contracts/*.sol": [
      "prettier --write"
    ],
    "test/**/*.ts": [
      "prettier --write"
    ]
  },
  "author": "The Graph Team",
  "license": "GPL-2.0-or-later",
  "devDependencies": {
    "@defi-wonderland/natspec-smells": "^1.1.6",
    "@eslint/js": "^9.26.0",
    "@graphprotocol/contracts": "workspace:^6.3.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-foundry": "^1.1.1",
    "@nomicfoundation/hardhat-ignition": "^0.15.9",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.9",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.10",
    "@nomicfoundation/ignition-core": "^0.15.9",
    "@openzeppelin/contracts": "^5.3.0",
    "@openzeppelin/contracts-upgradeable": "^5.3.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.15.17",
    "chai": "^4.3.7",
    "dotenv": "^16.5.0",
    "eslint": "9.26.0",
    "ethers": "^6.13.4",
    "hardhat": "^2.22.18",
    "hardhat-abi-exporter": "^2.11.0",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "2.2.3",
    "hardhat-secure-accounts": "^1.0.5",
    "hardhat-storage-layout": "^0.1.7",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "prettier-plugin-solidity": "2.0.0",
    "solhint": "5.1.0",
    "solidity-coverage": "^0.8.0",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.32.0"
  }
}
