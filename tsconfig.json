{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "allowJs": true,
    "checkJs": false
  },
  "include": ["**/*.ts", "**/*.js", "**/*.mjs", "**/*.cjs"],
  "exclude": ["node_modules", "dist", "build", "cache", "coverage"]
}
